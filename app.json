{
  "expo": {
    "name": "daily-quote-app",
    "slug": "daily-quote-app",
    "scheme": "dailyquote",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true
    },

    "android": {
      "edgeToEdgeEnabled": true
    },

    "web": {
      "output": "static"
    },

    "plugins": ["expo-router"],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
